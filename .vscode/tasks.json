{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Classes_Folder",
            "command": "if",
            "type": "shell",
            "args":["(", "-not", "(Test-Path", "-Path", "classes)", ")", "{", "mkdir", "classes", "}"],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Compile_Classes",
            "command": "javac",
            "type": "shell",
            "args": [
                "-d", "'classes'",
                "-classpath", "'classes'",
                "userinterface\\*.java",
                "model\\*.java",
                "common\\*.java",
                "database\\*.java",
                "event\\*.java",
                "exception\\*.java",
                "impresario\\*.java",
                "Utilities\\*.java"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build",
            "dependsOn": [
                "Classes_Folder"
            ]
        },
        {
            "label": "Compile_Main",
            "command": "javac",
            "type": "shell",
            "args": [
                "-classpath", "'classes;.'",
                "Project.java"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build",
            "dependsOn": [
                "Compile_Classes"
            ]
        }
    ]
}